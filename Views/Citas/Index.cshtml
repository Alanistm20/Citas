@model List<Citas.Domain.Entities.Cita>

@{
    ViewData["Title"] = "Citas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Listado de Citas</h2>
    <a class="btn btn-primary" asp-action="Create">+ Nueva Cita</a>

</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped table-bordered mb-0 align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Paciente</th>
                    <th>Médico</th>
                    <th>Motivo</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th style="width:180px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || Model.Count == 0)
                {
                    <tr>
                        <td colspan="9" class="text-center p-4">No hay registros</td>
                    </tr>
                }
                else
                {
                    foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.IdCita</td>
                            <td>@c.Fecha.ToString("yyyy-MM-dd")</td>
                            <td>@c.HoraInicio.ToString(@"hh\:mm")</td>
                            <td>@(c.Paciente ?? c.IdPaciente.ToString())</td>
                            <td>@(c.Medico ?? c.IdMedico.ToString())</td>
                            <td>@c.Motivo</td>
                            <td>@c.Precio.ToString("0.00")</td>
                            <td>
                                <span class="badge bg-secondary">@c.Estado</span>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@c.IdCita">Editar</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@c.IdCita">Eliminar</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
