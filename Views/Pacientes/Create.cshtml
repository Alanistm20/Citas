@model Citas.Domain.Entities.Paciente

@{
    ViewData["Title"] = "Nuevo Paciente";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Nuevo Paciente</h2>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</div>

<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <label class="form-label">Nombre</label>
        <input class="form-control" asp-for="Nombre" required maxlength="120" />
    </div>

    <div class="col-md-3">
        <label class="form-label">DNI</label>
        <input class="form-control" asp-for="Dni" required maxlength="15" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Teléfono</label>
        <input class="form-control" asp-for="Telefono" maxlength="30" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Activo</label>
        <select class="form-select" asp-for="Activo">
            <option value="true">Sí</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar</button>
    </div>
</form>
