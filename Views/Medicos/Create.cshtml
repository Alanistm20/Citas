@model Citas.Domain.Entities.Medico

@{
    ViewData["Title"] = "Nuevo Médico";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Nuevo Médico</h2>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</div>

<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <label class="form-label">Nombre</label>
        <input class="form-control" asp-for="Nombre" required maxlength="100" />
    </div>

    <div class="col-md-6">
        <label class="form-label">Especialidad</label>
        <input class="form-control" asp-for="Especialidad" maxlength="100" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Activo</label>
        <select class="form-select" asp-for="Activo">
            <option value="true">Sí</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="col-12">
        <button class="btn btn-success" type="submit">Guardar</button>
    </div>
</form>

